/* pages/profile/profile.wxss */
.profile{
  background-color: #03bbd5;
  height:400rpx;
  text-align: center;
  position: relative;
  width: 100%;
  position: fixed;
  top:0;
}
.profile-img{
  width: 200rpx;
  height:200rpx;
  display: block;
  overflow: hidden;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  transform: translate(-50%,60rpx);
}
.profile-name{
  position: absolute;
  font-size: 36rpx;
  color:#fff;
  left:50%;
  transform: translate(-50%,270rpx);
}
.myMessage{
  width: 100%;
  height: 80rpx;
  background: #eee;
  position: fixed;
  top:400rpx;
  text-align: center;
  line-height: 80rpx;
}
page{
  background: #eee;
}
.item{
  background: #fff;
  margin-bottom: 20rpx;
  padding: 25rpx;
  font-size: 30rpx;
}
.item-address{
  font-size: 27rpx;
  color:#ff9700;
  margin-bottom: 10rpx;
}
.item-message{
  color:#777;
}
.delete{
  height:60rpx;
  width:110rpx;
  background-color: #ec682b;
  border-radius: 40rpx;
  color: #fff;
  line-height: 60rpx;
  text-align: center;
}
.messageContainer{
  display: flex;
  justify-content: space-between
}